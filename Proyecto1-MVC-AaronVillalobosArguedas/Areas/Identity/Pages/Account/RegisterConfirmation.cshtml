@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmacion de cuenta.";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Click aqui para confirmar su cuenta.</a>
</p>
    }
    else
    {
<p>
        Please check your email to confirm your account.
</p>
    }
}

