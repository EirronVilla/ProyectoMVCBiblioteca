@model ICollection<Proyecto1_MVC_AaronVillalobosArguedas.Models.Libro>

@{
    ViewData["Title"] = "View";
}

<h1>Biblioteca Proyecto #1</h1>

<h4>Listado de Libros Disponibles</h4>
<hr />
<div class="row">
    @if(Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ISBN</th>
                    <th scope="col">Título</th>
                    <th scope="col">Editorial</th>
                    <th scope="col">Edición</th>
                    <th scope="col">Autor</th>
                    <th scope="col">Ejemplares Disponibles</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var libro in Model)
                {
                    <tr>
                        <td>@libro.ISBN</td>
                        <td>@libro.Titulo</td>
                        <td>@libro.Editorial</td>
                        <td>@libro.Edicion</td>
                        <td>@libro.Autor</td>
                        <td>@libro.Disponibles</td>
                        <td><a href="#">Ver Detalles</a> | <a href="#">Solicitar Prestamo</a></td>
                    </tr>
                }
            </tbody>
        </table>
    } else
    {
        <p> No hay datos registrados. </p>
    }
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
